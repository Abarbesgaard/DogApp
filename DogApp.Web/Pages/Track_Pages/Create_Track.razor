@using DogApp.Web.Dto.TrackDtos
@using DogApp.Web.Services.Interfaces
@inject ITrackService TrackService
@inject IItemService ItemService

@page "/createNewtrack"

<h1>Create New Track</h1>

<div class="row">
    <div class="col-md-6">
        <label for="name">Name:</label>
        <input type="text" @bind="track.Name" id="name" class="form-control" />
    </div>
    <div class="col-md-3">
        <label for="height">Height:</label>
        <input type="number" @bind="track.Height" id="height" class="form-control" />
    </div>
    <div class="col-md-3">
        <label for="width">Width:</label>
        <input type="number" @bind="track.Width" id="width" class="form-control" />
    </div>
</div>

<div>
    <label for="category">Category:</label>
    <select id="category" @bind="category">
        <option value="">-- Select category --</option>
        <option value="Beginner">Beginner</option>
        <option value="Expert">Expert</option>
        <option value="Champion">Champion</option>
    </select>
</div>

<button @onclick="CreateTrack">Create Track</button>
@code {
    private TrackDtoUserCreate track = new TrackDtoUserCreate("", 0, 0, "");
    private string category = "";

    public async Task CreateTrack()
    {
        track.Category = category;
        await TrackService.CreateTrackAsync(track);
    }
}
